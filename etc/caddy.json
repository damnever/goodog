{
  "admin": {
    "enforce_origin": true,
    "origins": ["localhost:2019", "127.0.0.1:2019"],
    "config": { "persist": true }
  },
  "apps": {
    "tls": {
      "automation": {
        "renew_interval": "720h",
        "policies": [{
          "subjects": [ "<DOMAIN>" ],
          "issuer": {
            "module": "acme",
            "email": "<ACME-EMAIL>",
            "acme_timeout": "300s"
          }
        }]
      }
    },
    "http": {
      "grace_period": "3s",
      "servers": {
        "goodog": {
          "listen": [":443"],
          "logs": { },
          "automatic_https": {
            "disable": false,
            "disable_redirects": true
          },
          "tls_connection_policies": [{}],
          "experimental_http3": true,
          "read_timeout": "30s",
          "read_header_timeout": "5s",
          "write_timeout": "5s",
          "routes": [
            {
              "match": [
                {
                  "host": ["<DOMAIN>"],
                  "path": ["/"]
                }
              ],
              "handle": [
                {
                  "handler": "authentication",
                  "providers": {
                    "http_basic": {
                      "hash": { "algorithm": "bcrypt" },
                      "realm": "restricted",
                      "accounts": [
                        {
                          "username": "<USERNAME>",
                          "password": "<HASHED-PASSWORD,BASE64-ENCODED>",
                          "salt": ""
                        }
                      ]
                    }
                  }
                },
                {
                  "handler": "goodog",
                  "upstream_tcp": "<TCP-SERVER>",
                  "upstream_udp": "<UDP-SERVER>",
                  "connect_timeout": "10s",
                  "timeout": "1m"
                }
              ],
              "terminal": true
            }
          ],
          "errors": {
            "routes": [
              {
                "handle": [
                  {
                    "handler": "static_response",
                    "body": "<h1>Ooops</h1>"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  }
}
